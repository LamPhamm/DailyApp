#:import Factory kivy.factory.Factory
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import datetime datetime
WindowManager3:
    HomePage:
    DailyEntryPage:
    PastEntriesPage:
    Navigation:
        
<WindowManager3>:
    transition: NoTransition()

<Navigation>:
    Button:
        text: "Daily Entry"
        size_hint: 1/3,0.05
        on_release: 
            app.root.current="daily entry"
                
    Button:
        text: "Past Entries"
        size_hint: 1/3,0.05
        pos_hint:{"x":1/3}
        on_release: 
            app.root.current="past entries"

    Button:
        text: "Home"
        size_hint: 1/3,0.05
        pos_hint:{"x":2/3}
        on_release: 
     
            app.root.current="home"

<HomePage>:
    name: "home"

    FloatLayout:
        cols:1
        Label:
            text: "Daily"
            pos_hint: {"y":0.25}
            font_size: 40

        Button:
            text: "What is this app?"
            size_hint: 0.5,0.05
            pos_hint: {"x":0.5,"top":0.5}
            on_release: Factory.CustomPopup1().open()
            
        Navigation:

<DailyEntryPage>:

    name:"daily entry"

    FloatLayout:
        id: dailyEntry
        Label:
            text: "Daily Entry"
            font_size: 30
            pos_hint: {"y":0.4}

        Label:
            text: str(datetime.datetime.now())[:10]
            font_size: 20
            pos_hint: {"y":0.3}

        Label:
            text: "Daily Highlight:"
            font_size: 15
            pos_hint: {"x":-0.3,"y":0.2}

        TextInput:
            multiline:False
            size_hint:0.5,0.03
            pos_hint: {"x":0.35,"y":0.685}
            font_size: 10

        CheckBox:
            active:False
            pos_hint: {"x":0.9,"y":0.685}
            size_hint: None, None
            size: 20,20
            color: (0,255,255,0.5)
            on_active: root.checkbox_click(self, self.active)

        Label:
            id: motivation
            text:""
            pos_hint: {"y":-0.4}

        Label:
            text: "Daily To-Do List:"
            font_size: 15
            pos_hint: {"x":-0.3,"y":-0.1}

        Button:
            text:"Add"
            pos_hint: {"x":0.05,"y":0.1}
            size_hint: 0.2,0.05
            on_release: root.addToDo()

        Button:
            text:"Remove"
            pos_hint: {"x":0.75,"y":0.1}
            size_hint: 0.2,0.05
            on_release: root.displayRemovePopup()

      
        ScrollView:        
            do_scroll_x: False
            do_scroll_y: True
            bar_width:5
            pos_hint: {"y":0.165,"x":0.1}
            size_hint: 0.8,0.2
            
            FloatLayout:
                id:scroller
                size_hint_y:None
                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding: 10, 10
                    
        Navigation:

<RemovePopup>:
    TextInput:
        id: userInput
        text: ""
        font_size: 40
        size_hint: 0.6, 0.6
        pos_hint: {"x":0.2, "top":1}

    Button:
        text: "Enter"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":0.2}
        on_release: root.shiftTasks()
        


<PastEntriesPage>:
    name:"past entries"

    FloatLayout:
        Label:
            text: "Search a Date"
            font_size: 30

        Navigation:



<CustomPopup1@Popup>:
    title: 'What is this app?'
    size_hint: (None, None)
    pos_hint: {"top":1}
    size: (220, 220)
    
    Label:
        text: 'This app lets you organize\nwhat you need to do each day!'
        pos_hint: {"x":0.2,"y":0.35}
        multiline: True

<Popup1>:
    Label:
        text:"This app lets you organize what you need to do each day!"


