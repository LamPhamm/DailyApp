<CustomPopup1@Popup>:
    title: 'What is this app?'
    size_hint: (None, None)
    pos_hint: {"top":1}
    size: (220, 220)
    
    Label:
        text: 'This app lets you organize\nwhat you need to do each day!'
        pos_hint: {"x":0.2,"y":0.35}
        multiline: True

<Popup1>:
    Label:
        text:"This app lets you organize what you need to do each day!"

        